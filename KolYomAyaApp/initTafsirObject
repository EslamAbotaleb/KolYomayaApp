////

private void initTafsirList() {
        String folderName = "";
        switch(reciterId) {
            case 1:
                folderName = "almuyassar";
                break;
            case 2:
                folderName = "almukhtasar";
                break;
            case 3:
                folderName = "alsidi";
                break;
            case 4:
                folderName = "aljalalayn";
                break;
            case 5:
                folderName = "alsiraaj";
                break;
            case 6:
                folderName = "almuyassar-g";
                break;
            case 7:
                folderName = "ibn-juzay";
                break;
        }
        List<Albums> results = new ArrayList<>();
        List<Audio> audioList = new ArrayList<>();
        for (int i = 1; i <= 114; i++) {
            String linkBuilder = "https://mirrors.quranicaudio.com/tafsir.one/"+folderName+"/";
            String surahNumber = "";
            if (i < 10) {
                surahNumber = "00" + i;
            } else if (i < 100) {
                surahNumber = "0" + i;
            } else {
                surahNumber = i + "";
            }
            linkBuilder = linkBuilder + surahNumber + ".mp3";
            audioList.add(new Audio(
                    i+1,
                    "سورة " + Config.SURA_NUMBER.get(surahNumber),
                    linkBuilder,
                    ""
            ));
            Log.d("Albums - linkBuilder", linkBuilder);
            Log.d("Albums - surahName: ", Config.SURA_NUMBER.get(surahNumber) + "");
        }
        results.add(new Albums(1, reciterName, "114", audioList));
        AlbumsListResponse response = new AlbumsListResponse(200, "", 1, results);
        this.onResponse(response);
}
